{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.dockerignore",
      "**/Dockerfile*",
      "**/docker-compose.yml"
    ],
    "rewrites": [
      {
        "source": "/auth/register",
        "destination": "/auth/register/index.html"
      },
      {
        "source": "/auth/login",
        "destination": "/auth/login/index.html"
      },
      {
        "source": "/pages/admin",
        "destination": "/pages/admin/index.html"
      },
      {
        "source": "/pages/dashboard",
        "destination": "/pages/dashboard/index.html"
      },
      {
        "source": "/pages/analytics",
        "destination": "/pages/analytics/index.html"
      },
      {
        "source": "/pages/voting",
        "destination": "/pages/voting/index.html"
      },
      {
        "source": "/pages/notifications",
        "destination": "/pages/notifications/index.html"
      },
      {
        "source": "/pages/profile",
        "destination": "/pages/profile/index.html"
      },
      {
        "source": "/configure-backend.html",
        "destination": "/configure-backend.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        "git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*..local"
      ]
    }
  ]
}